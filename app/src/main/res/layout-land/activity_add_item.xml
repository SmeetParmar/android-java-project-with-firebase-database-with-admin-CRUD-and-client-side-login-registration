<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new data..."
        android:textSize="30dp"
        android:textColor="@color/mainColor"
        android:gravity="center">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp">

    <EditText
        android:hint="Enter Item Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:textSize="15dp"
        android:id="@+id/formItemName"></EditText>

    <EditText
        android:hint="Enter Item Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:id="@+id/formItemPrice"></EditText>
    </LinearLayout>

    <EditText
        android:hint="Enter Item Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textSize="15dp"
        android:id="@+id/formItemDetails"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="4"
        android:scrollHorizontally="true"
        android:layout_marginTop="10dp"></EditText>


    <EditText
        android:hint="Enter Item Image Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textSize="15dp"
        android:id="@+id/formItemImage"
        android:layout_marginTop="10dp"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="18dp"
        android:backgroundTint="@color/mainColor"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:id="@+id/formAddButton"
        android:layout_marginHorizontal="300dp"></Button>

</androidx.appcompat.widget.LinearLayoutCompat>